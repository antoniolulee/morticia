<div class="container">
  <h2>Nuevo usuario</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>


    <div>
      <%= f.label :email, class:"form-label"%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control-sm" %>
    </div>

    <div>
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control-sm" %>
    </div>

    <div>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control-sm" %>
    </div>

    <br>

    <div class="actions">
      <%= f.submit "OK! Vamos allÃ¡", class:"btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links", class:"btn btn-outline-success" %>
  <br>
</div>